{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (debug)",
            "type": "shell",
            "command": "premake5 gmake2 && make config=debug",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build (release)",
            "type": "shell",
            "command": "premake5 gmake2 && make config=release",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "windows build (debug)",
            "command": "msbuild",
            "type": "process",
            "args": [
                "WeekendRaytracer.sln"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$tsc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "windows build (release)",
            "command": "msbuild",
            "type": "process",
            "args": [
                "WeekendRaytracer.sln",
                "/property:Configuration=Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$tsc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}